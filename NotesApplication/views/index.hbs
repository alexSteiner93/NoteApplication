
<div id="container1">
    <form action='/notes' method='get'><button type="submit" id="createButton">Create new Note</button></form>
    <form action="" method="get"><button id="styleSwitcher" type="submit">Style Switcher</button></form>
</div>
<div id="container2">
    <form action='/sortedByDate' method='get'><button id="sortDate" type="submit">By finish Date</button></form>
    <form action='/sortedByCreateDate' method='get'><button id="sortCreated" type="submit">By Create Date</button></form>
    <form action='/sortedByRating' method='get'><button id="sortByImportance" type="submit">By Importance</button></form>
    <form action="" method="get" id="hideFinsishedForm"><button id="hideFinsished" type="submit">Hide Finished</button></form>
</div>
{{#each data}}
<div id="container3" data-id="{{this.id}}">
<span>{{this.title}}</span><span>{{this.beschreibung}}</span><span>{{this.wichtigkeit}}</span>
<p>{{this.fertigBis}}</p>
    {{#if this.erledigt}}
<div id="container4">
    <input type="checkbox" class="checkboxFinished" checked>Finished
    <p id="beschreibung">Beschreibung</p>
    <form action='/notes/edit' method='get'><button class="editButton">Edit</button></form>
</div>
    </div>
    {{else}}
        <div id="container4">
            <input type="checkbox" class="checkboxFinished">Finished

            <p id="beschreibung">Beschreibung</p>
            <button class="editButton">Edit</button>
        </div>
        </div>
    {{/if}}
{{/each}}



