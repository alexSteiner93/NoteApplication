<div>
    <h1>Neue Todo</h1>
    <form action="/new" method="post">
        <label>Title <input type="text" name="title" required></label>
        <label>Beschreibung <textarea name="beschreibung" required></textarea></label>
        <label>Wichtigkeit <input type="number" name="wichtigkeit" min="0" max="5" required></label>
        <label>Fertig bis <input type="date" name="fertigBis" pattern="[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|1[0-9]|2[0-9]|3[01])" required></label>
        <label>Erledigt! <input type="checkbox" name="erledigt"></label>
        <button type="submit">Anlegen</button><button type="reset">Reset</button>
    </form>
</div>
